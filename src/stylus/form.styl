$st-brand = #8F0620
$nd-brand = #529A43
$ph = #AAAAAA

.hlink-st
	color $st-brand

.hlink-nd
	color $nd-brand

// Mixin
placeholder(c)
	&::-webkit-input-placeholder
		color c
	&::-moz-placeholder
		color c
	&:-ms-input-placeholder
		color c
	&:-moz-placeholder
		color c

// Button
$btn
	position relative
	box-sizing border-box
	padding .65em 1.5em
	margin 0
	overflow hidden
	will-change background-color
	transition background-color 0.5s
	appearance: none
	border: none
	border-radius: 3px
	font-weight: 400
	font-size: 1em
	color: white
	cursor: pointer
	outline: none

btn($cor)
	background-color: $cor
	&:hover
	&:focus
		outline: none
	&:hover
		background-color: darken($cor, 20%)

.btn
	@extend $btn

.btn--brand
	btn($st-brand)


// Forms
$frm_common
	position: relative
	box-sizing: border-box
	margin: 0 0 3em 0

.frm__login
	width 300px
	margin 0 auto
	display block
	+above('m')
		width 500px

.frm__row
	@extends $frm_common
	&--center
		text-align: center

.frm__line
	display block
	pointer-events: none
	position absolute
	top 0
	left 0
	bottom: 0
	right: 0

	&:after
		content: ''
		top auto
		left 0
		bottom: 0
		right: 0
		position absolute
		width: 100%
		height: 1px
		overflow hidden
		background-color: $st-brand
		transform-origin 0 0
		transform scale(0)
		will-change transform
		transition transform 1s

.frm__label
	display block
	margin-bottom .2em
	font-weight 400
	color: $st-brand

.frm__input
	placeholder($ph)
	box-sizing: border-box !important
	display: block !important
	width: 100% !important
	border-radius: 0 !important
	appearance: none !important
	background: none !important
	font-size: 1rem !important
	border: none !important
	border-bottom: 1px solid lightgray !important
	height 30px !important
	color: black !important
	margin: 0 !important
	padding: 0 !important
	&:focus
		outline: none !important
	&:focus ~ .frm__line:after
		transform scale(1)
